<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>Gif Me It</title>

		<!-- Bootstrap -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
		<link href="https://fonts.googleapis.com/css?family=Inconsolata|Lobster" rel="stylesheet">
		<!-- Font awesome -->
		<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
		<!-- Custom css -->
		<link rel="stylesheet" href="stylesheets/style.css">
	</head>
	<body>
		<!-- input -->
		<header>
			<h1 class="brand"><a href="/">gif me it</a></h1>
			<p>All your GIFs in one place</p>
			<form class="search-form">
				<label for="q" class="sr-only">Search</label>
				<input autofocus id="q" type="text" name="search" class="search-input" placeholder="Search GIFs">
				<button class="search-btn"><i class="fas fa-search"></i></button>
			</form>
		</header>
		<!-- output -->
		<main class="container">
			<div class="content">
				<section class="trending">
					<h2>Trending GIFs</h2>
					<div class="trending-items">
						<% data.forEach(data => { %>
						<div class="thumbnail">
							<img src="<%= data.images.downsized.url %>">
						</div>
						<% }) %>
					</div>
				</section>
			</div>
		</main>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<script src="js/main.js" type="text/javascript"></script>
	</body>
</html>
